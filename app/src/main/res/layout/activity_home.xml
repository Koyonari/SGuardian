<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp">

        <TextView
            android:id="@+id/titleSGuardian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SGuardian"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"/>

        <HorizontalScrollView
            android:id="@+id/profileCirclesScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/titleSGuardian"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:id="@+id/profileCirclesLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">

                <ImageView
                    android:id="@+id/profile1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circle_shape_gray"
                    android:layout_marginEnd="40dp"/>

                <ImageView
                    android:id="@+id/profile2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circle_shape_gray"
                    android:layout_marginEnd="40dp"/>

                <ImageView
                    android:id="@+id/profile3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circle_shape_gray"
                    android:layout_marginEnd="40dp"/>

                <!-- Additional profile circles can be added here -->
                <ImageView
                    android:id="@+id/profile4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circle_shape_gray"
                    android:layout_marginEnd="40dp"/>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/parentalControlTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parental Control"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/profileCirclesScrollView"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/controlsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/parentalControlTitle"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Elara"
                    android:textColor="@color/white"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/elaraSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Stellan"
                    android:textColor="@color/white"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/stellanSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Callum"
                    android:textColor="@color/white"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/callumSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/appUsageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overall Monitored App Usage"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/controlsLayout"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/averageTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average time spent"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/appUsageTitle"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/timeIndicatorLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/averageTimeText"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4h 35m"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/circle_shape_green"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/usageChartContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/timeIndicatorLayout"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8h"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <FrameLayout
                android:id="@+id/chartLayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <!-- Here we would normally use a custom chart view -->
                <!-- For simplicity, using a placeholder with colored bars -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="7"
                    android:layout_marginHorizontal="24dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:background="@color/white"
                        android:layout_marginHorizontal="2dp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:background="@color/white"
                        android:layout_marginHorizontal="2dp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:background="@color/white"
                        android:layout_marginHorizontal="2dp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:background="@color/white"
                        android:layout_marginHorizontal="2dp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:background="#2962FF"
                        android:layout_marginHorizontal="2dp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:background="@color/white"
                        android:layout_marginHorizontal="2dp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:background="@color/white"
                        android:layout_marginHorizontal="2dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4D4D4D"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6h"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:background="#2962FF"
                    android:paddingHorizontal="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="30dp"
                    android:text="4h"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0h"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_gravity="bottom"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="M"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="T"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="W"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="T"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="F"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="S"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="S"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/addAppButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="+"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/usageChartContainer"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/appListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/addAppButton"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Youtube\n23 hours"
                    android:textColor="@color/white"/>

                <ImageButton
                    android:id="@+id/removeYoutubeButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_delete"
                    android:background="@null"
                    app:tint="@color/white"
                    android:contentDescription="Remove YouTube"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Github\n20 hours"
                    android:textColor="@color/white"/>

                <ImageButton
                    android:id="@+id/removeGithubButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_delete"
                    android:background="@null"
                    app:tint="@color/white"
                    android:contentDescription="Remove GitHub"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Brawl Stars\n16 hours"
                    android:textColor="@color/white"/>

                <ImageButton
                    android:id="@+id/removeBrawlStarsButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_delete"
                    android:background="@null"
                    app:tint="@color/white"
                    android:contentDescription="Remove Brawl Stars"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Notion\n8 hours"
                    android:textColor="@color/white"/>

                <ImageButton
                    android:id="@+id/removeNotionButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_delete"
                    android:background="@null"
                    app:tint="@color/white"
                    android:contentDescription="Remove Notion"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>